<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">font/nunito_regular</item>
        <item name="android:colorBackground">@color/greyLight</item>
        <item name="android:colorForeground">@color/black</item>
    </style>

    <!--    Pin widget      -->
    <style name="PinWidget" />

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--    Custom Buttons  -->
    <style name="MyButton" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyButton.SecondaryCurved">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_secondary_round</item>
    </style>

    <style name="MyButton.PrimaryCured">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_primary_round</item>
    </style>

    <style name="MyButton.Secondary">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_secondary</item>
    </style>

    <style name="MyButton.Primary">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_primary</item>
    </style>
    <!--    End of Custom Buttons  -->

    <!--    Custom Edit text    -->
    <style name="MyEditText" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
    <!--    End Custom Edit text    -->

    <!--    Vertical and Horizontal Lines  -->
